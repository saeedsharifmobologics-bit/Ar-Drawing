<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SubscriptionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_close"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/close_prime_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_restore"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/restore_btn"


                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Title & Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Unlimited Access"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="Access the most advanced AI research assistant"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Image with Gradient -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/header_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/draw_with_camer_screen_png" />

                        <ImageView
                            android:id="@+id/header_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/draw_with_screen_img" />

                        <ImageView
                            android:id="@+id/header_image3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/draw_with_camera_img" />

                        <!-- Add more images if needed -->

                    </LinearLayout>
                </HorizontalScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="top"
                    android:background="@drawable/gradient_top_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_bottom_white" />
            </FrameLayout>

            <!-- Feature List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Repeat for each feature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/selected_mode_tick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Ads Free!"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/selected_mode_tick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Unlimited AI Generations"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"

                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/selected_mode_tick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Unlimited Pro Sketches"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"

                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/selected_mode_tick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Record Time-lapse Video"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Plan Scroller -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="@dimen/_10sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First Plan -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/first_plan"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginEnd="8dp"
                        android:padding="10dp"
                        android:background="@drawable/plan_bg_card">

                        <!-- Plan Title -->
                        <TextView
                            android:id="@+id/trail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-Day Free Trial"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Tick Icon -->
                        <ImageView
                            android:id="@+id/plan_tick"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/selected_mode_tick"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/trail_name" />

                        <!-- Plan Price -->
                        <TextView
                            android:id="@+id/plan_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs:-1299/-"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/trail_name"
                            app:layout_constraintTop_toBottomOf="@id/trail_name" />

                        <!-- Plan Duration -->
                        <TextView
                            android:id="@+id/plan_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/plan_price" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/second_plan"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginEnd="8dp"
                        android:padding="10dp"
                        android:background="@drawable/plan_bg_card">

                        <!-- Plan Title -->
                        <TextView
                            android:id="@+id/trail_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-Day Free Trial "
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Tick Icon -->
                        <ImageView
                            android:id="@+id/plan_tick2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/selected_mode_tick"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/trail_name2" />

                        <!-- Plan Price -->
                        <TextView
                            android:id="@+id/plan_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs:-1799/-"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/trail_name2"
                            app:layout_constraintTop_toBottomOf="@id/trail_name2" />

                        <!-- Plan Duration -->
                        <TextView
                            android:id="@+id/plan_duration2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/plan_price2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Third Plan (Yearly) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/third_plan"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:padding="10dp"
                        android:background="@drawable/plan_bg_card">

                        <TextView
                            android:id="@+id/trail_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yearly Plan"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/plan_tick3"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/selected_mode_tick"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/trail_name3" />

                        <TextView
                            android:id="@+id/plan_price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs:-9999/-"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/trail_name3"
                            app:layout_constraintTop_toBottomOf="@id/trail_name3" />

                        <TextView
                            android:id="@+id/plan_duration3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yearly"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/plan_price3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>

            </HorizontalScrollView>

            <!-- Unlock Access Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/selected_guiddialog_bg"
                android:text="Unlock Access"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
